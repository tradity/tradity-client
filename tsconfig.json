    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "app/main.prod.ts",
    "dist",
    "tmp",
    "aot"
  ]
}
