{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "rootDir": ".",
    "outDir": "tmp"
  },
  "files": [
    "app/app.module.ts",
    "app/main.prod.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true
  }
}
