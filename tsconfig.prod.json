{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "rootDir": ".",
    "outDir": "tmp"
  },
  "files": [
    "app/app.module.ts",
    "app/main.prod.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : true,
    "enableIvy": false
  }
}
